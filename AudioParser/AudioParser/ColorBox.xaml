<UserControl x:Class="AudioParser.ColorBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioParser"
             mc:Ignorable="d" Height="33.7" Width="110.4">
    <Grid Margin="0,0,0.4,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="11*"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="11*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"></ColumnDefinition>
            <ColumnDefinition Width="39*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="Canvas" Margin="0,0,1,0" Background="LightGreen" Grid.RowSpan="5"/>
        <ProgressBar x:Name="BarR" Foreground="#3FFF0000" Grid.Column="1" Margin="0"/>
        <ProgressBar x:Name="BarG" Foreground="#3F00FF00" Grid.Column="1" Margin="0" Grid.Row="2"/>
        <ProgressBar x:Name="BarB" Foreground="#3F0000FF" Grid.Column="1" Margin="0" Grid.Row="5"/>
    </Grid>
</UserControl>
